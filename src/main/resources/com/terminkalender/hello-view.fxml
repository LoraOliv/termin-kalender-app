<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.terminkalender.controller.KalenderController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <Label fx:id="welcomeText"/>
  <Button text="Neuen Eintrag hinzufügen" onAction="#onHelloButtonClick"/>
  <Button text="Eintrag löschen" onAction="#onHelloButtonClick"/>
</VBox>


        <?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.scene.control.*?>
        <?import javafx.scene.layout.*?>
        <?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yourcompany.calendarapp.controller.CalendarController">
<top>
  <HBox alignment="CENTER" spacing="10">
    <padding>
      <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Button text="Vorheriger Tag" onAction="#handlePreviousDay"/>
    <Label fx:id="dateLabel" text="[Datum]" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <Button text="Nächster Tag" onAction="#handleNextDay"/>
    <Button text="Termin hinzufügen" onAction="#handleAddAppointment"/>
  </HBox>
</top>
<center>
  <ListView fx:id="appointmentListView" VBox.vgrow="ALWAYS"/>
</center>
<bottom>
  <HBox alignment="CENTER_RIGHT" spacing="10">
    <padding>
      <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Button text="Termin bearbeiten" onAction="#handleEditAppointment"/>
    <Button text="Termin löschen" onAction="#handleDeleteAppointment"/>
  </HBox>
</bottom>
</BorderPane>